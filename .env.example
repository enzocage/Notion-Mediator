# Server Configuration
PORT=3000

# Google Gemini API Key
GEMINI_API_KEY=your_gemini_api_key_here

# Notion Integration
NOTION_API_KEY=your_notion_integration_key_here

# Notion Page IDs (from the URL of the pages)
PAGE_ID_1=your_first_page_id_here
PAGE_ID_2=your_second_page_id_here

# Google Docs Integration
# Path to your Service Account key file (e.g., google-credentials.json)
GOOGLE_APPLICATION_CREDENTIALS=google-credentials.json
# Google Doc IDs (from the URL of the docs)
GOOGLE_DOC_ID_1=your_first_doc_id_here
GOOGLE_DOC_ID_2=your_second_doc_id_here
